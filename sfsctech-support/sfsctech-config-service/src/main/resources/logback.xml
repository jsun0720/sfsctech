<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

	<property name="default_pattern" value="%d [%t - %X{traceNo}] %-5level %c{1} - %m%n" />
	<!--<property name="default_pattern" value="%d [%t] - [traceNo] %-5level [%C.%M] - %m%n"/>-->
	<property name="filepath" value="D:/opt/logs/config-service" /><!-- 本地文件 -->

	<!-- 控制台输出 -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- 只写本地文件，level>=INFO -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${filepath}/log.%d{yyyy-MM-dd}.log</FileNamePattern>
		</rollingPolicy>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<!-- 小于level级别的日志会被过滤掉 -->
			<level>INFO</level>
		</filter>
		<encoder>
			<pattern>${default_pattern}</pattern>
		</encoder>
	</appender>

	<logger name="com.sfsctech" level="INFO"/>
	<logger name="com.apache.ibatis" level="TRACE"/>
	<logger name="java.sql.Connection" level="DEBUG"/>
	<logger name="java.sql.Statement" level="DEBUG"/>
	<logger name="java.sql.PreparedStatement" level="DEBUG"/>
	
	<root>
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</root>
	
</configuration>