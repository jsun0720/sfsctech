<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>sfsctech-support</artifactId>
        <groupId>com.sfsctech.support</groupId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>sfsctech-static-resources</artifactId>
    <packaging>jar</packaging>

    <dependencies>
        <!-- jquery -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>jquery</artifactId>
            <version>3.2.1</version>
        </dependency>
        <!-- jquery-ui -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>jquery-ui</artifactId>
            <version>1.12.1</version>
        </dependency>
        <!-- jquery.cookie -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>jquery.cookie</artifactId>
            <version>1.4.1</version>
        </dependency>
        <!-- jQuery.Hotkeys -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>jQuery.Hotkeys</artifactId>
            <version>0.2.0</version>
        </dependency>
        <!-- jquery.maskedinput -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>jquery.maskedinput</artifactId>
            <version>1.4.1</version>
        </dependency>
        <!-- bootstrap -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>bootstrap</artifactId>
            <version>3.3.7</version>
        </dependency>
        <!-- bootstrapValidator -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>bootstrapValidator</artifactId>
            <version>0.5.2</version>
        </dependency>
        <!-- vue -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>vue</artifactId>
            <version>2.3.0</version>
        </dependency>
        <!-- vue-resource -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>vue-resource</artifactId>
            <version>1.2.1</version>
        </dependency>
        <!-- ztree -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>ztree</artifactId>
            <version>3.5.0</version>
        </dependency>
        <!-- echarts -->
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>echarts</artifactId>
            <version>3.3.1</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>static-resources</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>com.sfsctech.resources.StaticResourcesService</mainClass>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>
                                repackage
                            </goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>